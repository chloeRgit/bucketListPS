{% extends 'base.html.twig' %}

{# % block title %}Hello MainController!{% endblock %#}

{% block body %}

<div class="container">

        {%  if success_ajout=='success' %}
    <div class="alert alert-success">
        <p>Idea successfully added!</p>
    </div>
        {% endif %}

    <div class="col-md-12 col-lg-12">
        <article class="post vt-post">
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
                    <div class="post-type post-img">
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png" class="img-responsive" alt="image post"></a>
                    </div>
                    <div class="author-info author-info-2">
                        <ul class="list-inline">
                            <li>
                                <div class="info">
                                    <p>Posted on:</p>
                                    <strong>{{wish.dateCreated|date("d/m/Y")}}</strong></div>
                            </li>
                            <li>
                                <div class="info">
                                    <p>By</p>
                                    <strong>{{wish.author}}</strong></div>
                            </li>
                            {% if wish.categorie %}
                            <li>
                                <div class="info">
                                    <p>Category</p>
                                    <strong>{{wish.categorie.nom}}</strong></div>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                    <div class="caption">
                        <h3 class="md-heading">{{ wish.title}}</a></h3>
                        <p> {{ wish.description}} </p>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                    <a href="{{ path('wish_update',{id: wish.id}) }}" class="btn btn-secondary">
                        <i class="fa fa-edit"></i>
                    </a>
                </div>
            </div>
        </article>
    </div>
</div>
{% endblock %}
